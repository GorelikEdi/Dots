<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/tableBorder"
        android:layout_width="348dp"
        android:layout_height="350dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/grid_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer" />

    <TextView
        android:id="@+id/gameMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:visibility="invisible"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvlTextView" />

    <TextView
        android:id="@+id/lvlTextView"
        android:layout_width="98dp"
        android:layout_height="67dp"
        android:fontFamily="@font/bangers"
        android:text="@string/lvlTextView"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_btn"
        android:onClick="pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pause" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bangers"
        android:textColor="@color/colorAccent"
        android:text="@string/score"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameMsg" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tableBorder"
        app:layout_constraintEnd_toEndOf="@+id/tableBorder"
        app:layout_constraintStart_toStartOf="@+id/tableBorder"
        app:layout_constraintTop_toTopOf="@+id/tableBorder">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/x0_y0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="0,0"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x0_y1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="0,1"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x0_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="0,2"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x0_y3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="0,3"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x0_y4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="0,4"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/x1_y0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1,0"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x1_y1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1,1"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x1_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1,2"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x1_y3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1,3"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x1_y4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="1,4"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/x2_y0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="2,0"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x2_y1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="2,1"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x2_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="2,2"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x2_y3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="2,3"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x2_y4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="2,4"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/x3_y0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="3,0"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x3_y1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="3,1"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x3_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="3,2"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x3_y3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="3,3"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x3_y4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="3,4"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/x4_y0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="4,0"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x4_y1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="4,1"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x4_y2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="4,2"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x4_y3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="4,3"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />

            <ImageView
                android:id="@+id/x4_y4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="4,4"
                android:padding="1dp"
                android:src="@drawable/cell_empty" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>